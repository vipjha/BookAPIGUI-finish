@model BookApiProject.Models.Review
@{
    ViewData["Title"] = "CreateReview";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Add new review for @ViewBag.BookTitle</h1>
<form asp-controller="Reviews" asp-action="CreateReview" asp-route-bookId="@ViewBag.BookId" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Reviewer">Reviewer Name</label>
            </div>
            <div class="col-sm-3">
                @await Component.InvokeAsync("ReviewersList")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Headline">Review Headline</label>
            </div>
            <div class="col-sm-3">
                <input asp-for="Headline" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Rating">Review Rating</label>
            </div>
            <div class="col-sm-3">
                <input asp-for="Rating" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="ReviewText">Review:</label>
            </div>
            <div class="col-sm-3">
                <textarea asp-for="ReviewText" style="min-width:200px; min-height:200px;"></textarea>
            </div>
        </div>
        <br />
        <input type="submit" value="Create Review" class="btn-sm btn btn-primary" />
    </div>
</form>

